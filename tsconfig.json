{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@dashboard/*": ["src/app/dashboard/*"],
      "@components/*": ["src/app/components/*"],
      "@contexts/*": ["src/contexts/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./build/types/**/*.ts",
    "next-env.d.ts",
    "src/app/dashboard/DashboardContext.tsx",
    "./dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
